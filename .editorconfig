# top-most EditorConfig file
root = true

# Apply to all files
[*]
charset           = utf-8
indent_style      = space
indent_size       = 2
tab_width         = 2
end_of_line       = lf
trim_trailing_whitespace = true
insert_final_newline     = true

# You might want to preserve trailing spaces in Markdown (e.g. for hard breaks)
[*.md]
trim_trailing_whitespace = false
